<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/weekchart_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/icon_front"/>
            <TextView
                android:id="@+id/weekchart_isnowweek"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="本周"/>
            <TextView
                android:id="@+id/weekchart_week"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:text="第23周"/>
            <ImageView
                android:id="@+id/weekchart_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/icon_next"/>
        </LinearLayout>
        <View
            android:background="@color/Gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="7:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="8:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="9:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="10:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="11:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="12:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="13:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="14:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="15:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="16:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="17:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="18:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="19:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="20:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="21:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="22:00"
                    android:gravity="start"/>
                <TextView
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="23:00"
                    android:gravity="start"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/Gray"/>
            <com.kachidoki.ma.moneytime2.Widget.WeekTable
                android:id="@+id/weekchart_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="MoneyTime"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/White"
        android:background="@color/Gray"/>
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="标 题"/>
        <TextView
            android:id="@+id/tablediagle_title"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打豆豆"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="日 期"/>
        <TextView
            android:id="@+id/tablediagle_date"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年5月2日"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="起 始"/>
        <TextView
            android:id="@+id/tablediagle_starttime"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7：00"/>
        <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:background="@color/Gray"/>
        <TextView
            android:id="@+id/tablediagle_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9：00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="主 题"/>
        <TextView
            android:id="@+id/tablediagle_color"
            android:gravity="center"
            android:background="@color/Blue"
            android:layout_marginLeft="32dp"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:text="高效"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tablediagle_gotoshow"
            android:text="详细"
            android:textColor="@color/White"
            android:background="@color/Gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/White"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:text="执行"
            android:id="@+id/tablediagle_gotodo"
            android:textColor="@color/White"
            android:background="@color/Gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>